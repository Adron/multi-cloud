{
  "variables": {
    "account_json": "../../../secrets/account.json",
    "instance_name": "broodbox",
    "image_name": "broodboximage",
    "image_description": "Node.js Server."
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `account_json`}}",
      "project_id": "that-big-universe",
      "source_image": "debian-8-jessie-v20160923",
      "zone": "us-west1-a",
      "instance_name": "{{user `instance_name`}}",
      "image_name": "{{user `image_name`}}",
      "image_description": "{{user `image_description`}}",
      "communicator": "ssh",
      "ssh_username": "broodadmin"
    },
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-56997436",
      "instance_type": "t2.micro",
      "communicator": "ssh",
      "ssh_username": "broodadmin",
      "ami_name": "{{user `instance_name`}}",
      "ami_description": "{{user `image_description`}}",
      "vpc_id": "vpc-4b95822c",
      "subnet_id": "subnet-ae1d3ec9",
      "force_deregister": "true",
      "security_group_id": "sg-2572265e",
      "tags": {
        "OS_Version": "Debian",
        "Release": "Jessie"
      },
      "ssh_timeout" : "5m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 5",
        "echo \"slept for 3 seconds.\""
      ]
    },
    {
      "type": "file",
      "source": "install-nodejs.sh",
      "destination": "install-nodejs.sh"
    },
    {
      "type": "shell",
      "script": "install-nodejs.sh",
      "pause_before": "5s"
    },
    {
      "type": "file",
      "source": "install-ufw.sh",
      "destination": "install-ufw.sh"
    },
    {
      "type": "shell",
      "script": "install-ufw.sh",
      "pause_before": "5s"
    }
  ]
}
