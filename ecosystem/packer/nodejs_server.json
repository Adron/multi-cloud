{
  "variables": {
    "account_json": "../../../secrets/account.json",
    "instance_name": "broodbox",
    "image_name": "broodboximage",
    "image_description": "Node.js Server."
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-fde96b9d",
      "instance_type": "t2.micro",
      "communicator": "ssh",
      "ssh_username": "broodadmin",
      "ami_name": "{{user `instance_name`}}",
      "ami_description": "{{user `image_description`}}",
      "tags": {
        "OS_Version": "Debian",
        "Release": "Jessie"
      },
      "ssh_timeout" : "5m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 5",
        "echo \"slept for 3 seconds.\""
      ]
    },
    {
      "type": "file",
      "source": "install-nodejs.sh",
      "destination": "install-nodejs.sh"
    },
    {
      "type": "shell",
      "script": "install-nodejs.sh",
      "pause_before": "5s"
    },
    {
      "type": "file",
      "source": "install-ufw.sh",
      "destination": "install-ufw.sh"
    },
    {
      "type": "shell",
      "script": "install-ufw.sh",
      "pause_before": "5s"
    }
  ]
}
